<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/linearlayout_root" >

    <include
        android:id="@+id/title_root"
        layout="@layout/layout_title" />

    <TextView
        android:id="@+id/input_title"
        style="@style/padding"
        android:layout_below="@+id/title_root"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:gravity="center_horizontal"
        android:hint="@string/hint_title"
        android:paddingLeft="@dimen/space_normal"
        android:paddingRight="@dimen/space_normal"
        android:singleLine="false"
        android:textColor="@android:color/black"
        android:textSize="@dimen/size_title" >
    </TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/input_title"
        android:layout_marginBottom="@dimen/space_normal"
        android:layout_marginLeft="@dimen/space_normal"
        android:layout_marginRight="@dimen/space_larger"
        android:layout_marginTop="@dimen/space_small"
        android:paddingLeft="@dimen/space_normal"
        android:paddingRight="@dimen/space_larger" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/input_content"
                style="@style/padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:textColor="@android:color/black"
                android:textSize="@dimen/size_nomal"
                tools:ignore="LabelFor" >

            </TextView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>