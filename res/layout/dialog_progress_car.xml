<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <ProgressBar
        android:id="@+id/ProgressBar_dialog"
        android:layout_width="@dimen/dimen_progress_circle_new"
        android:layout_height="@dimen/dimen_progress_circle_new"
        android:indeterminateDrawable="@anim/anim_progress_car" />

    <ImageView
        android:layout_width="@dimen/dimen_progress_circle_new"
        android:layout_height="@dimen/dimen_progress_circle_new"
        android:padding="11dp"
        android:src="@drawable/icon_progress_car" />

</FrameLayout>