<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/linearlayout_root" >

    <EditText
        android:id="@+id/input_title"
        style="@style/padding"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:layout_marginTop="@dimen/space_larger"
        android:background="@drawable/shape_bg_white_line_gray"
        android:hint="@string/hint_title"
        android:paddingLeft="@dimen/space_normal"
        android:singleLine="false"
        android:textSize="@dimen/size_nomal" >
    </EditText>

    <EditText
        android:id="@+id/input_content"
        style="@style/padding"
        android:layout_width="match_parent"
        android:layout_above="@+id/save"
        android:layout_below="@+id/input_title"
        android:layout_marginLeft="@dimen/space_normal"
        android:layout_marginRight="@dimen/space_larger"
        android:layout_marginTop="@dimen/space_normal"
        android:background="@drawable/shape_bg_white_line_gray"
        android:gravity="left|top"
        android:inputType="textMultiLine"
        android:paddingLeft="@dimen/space_normal"
        android:paddingRight="@dimen/space_larger"
        android:singleLine="false"
        android:textSize="@dimen/size_nomal" >
    </EditText>

    <TextView
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/space_normal"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="@dimen/space_larger"
        android:background="@drawable/bgs_theme_deeper"
        android:gravity="center"
        android:padding="@dimen/space_normal"
        android:text="@string/key_save"
        android:textColor="@color/white"
        android:textSize="@dimen/size_nomal" />

</RelativeLayout>